# Twitter Scraper Configuration

# Twitter API Key (optional in mock mode)
# Get your key from: https://tweetscout.io
TWITSCOUT_API_KEY=your_twitscout_api_key_here

# CoinCap API Key (optional in mock mode)
# Get your key from: https://coincap.io
COINCAP_API_KEY=your_coincap_api_key_here

# CoinGecko API Key (optional)
# Get your key from: https://coingecko.com
COINGECKO_API_KEY=your_coingecko_api_key_here

# OpenRouter.ai Configuration (required for AI analysis)
# Get your key from: https://openrouter.ai
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Flask configuration for web deployment
FLASK_ENV=production
FLASK_DEBUG=False

# Port (set by Render automatically)
PORT=5000

# Storage Configuration (optional)
STORAGE_PATH=./data/

# Debug Mode (optional)
DEBUG=false
